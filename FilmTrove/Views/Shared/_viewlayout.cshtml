			    @*<h3>Photo Stream</h3>
			    <div class="flickr-widget">
				    <script type="text/javascript" src="http://www.flickr.com/badge_code_v2.gne?count=8&display=latest&size=s&layout=x&source=user&user=29609591@N08"></script>
				    <div class="clear"></div>
			    </div>*@
		    </div>
		    <div class="one-third column">
			    @*<h3>Latest Tweets</h3>
			    <ul id="twitter"></ul>
				    <script type="text/javascript">
				        jQuery(document).ready(function ($) {
				            $.getJSON('http://api.twitter.com/1/statuses/user_timeline/envato.json?count=3&callback=?', function (tweets) {
				                $("#twitter").html(tz_format_twitter(tweets));
				            });
