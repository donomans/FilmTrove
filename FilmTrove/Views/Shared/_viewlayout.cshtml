			    <div class="sixteen columns">
				    <p>© Copyright 2012 by <a href="#">FilmTrove</a>. All rights reserved.</p>		
			    </div>
		    </div>
		    @*<div id="under-footer-logo">
			    <div class="sixteen columns">
				    <a href="#"><img src="images/logo-small.png" alt="logo" /></a>
			    </div>
		    </div>*@	
	    </div>
    </div>
</body>
</html>